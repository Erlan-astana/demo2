<body>  
        
     <nav class="navbar navbar-default no-margin">
        <!-- Brand and toggle get grouped for better mobile display -->

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li class="active">
                    <button class="navbar-toggle collapse in" data-toggle="collapse" id="menu-toggle-2"><span class="glyphicon glyphicon-th-large" aria-hidden="true"></span></button>
                </li>
                <li>
                   <span class="header-title">Мектепке арналған білім беру жүйесі</span>
                </li>
            </ul>

            <ul style="float: right; text-decoration: none;" class="list-inline">
                <li>
                    <a style="text-decoration: none; padding-right: 10px; color: #f2e9e9; font-weight: bold;"  class="user-info" cid="@ViewBag.id"  roleId="@ViewBag.roleId">
                        <img src="~/Images/menu/user1.png" />@ViewBag.fio</a>
                </li>
                <li><a href="#" class="logoff" style="text-decoration: none; color: #f2e9e9;">Шығу</a></li>
                <hr />
            </ul>


        </div>
    </nav>
    <div id="wrapper">
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav nav-pills nav-stacked" id="menu">
               
                <li>
                    <a href="@Url.Action("primer", "Home")"><span class="fa-stack fa-lg pull-left"></span>
                       Қазақ тілі пәні</a>
                </li>
                 <li>
                    <a href="@Url.Action("Student", "Home")"><span class="fa-stack fa-lg pull-left"></span>
                       Оқушыға</a>
                </li>
                <li>
                    <a href="@Url.Action("Subject_Class", "Home")"><span class="fa-stack fa-lg pull-left"></span>
                        Пән және сынып қосу</a>
                </li>
                 <li>
                    <a href="@Url.Action("TBL_STUDENS", "Home")"><span class="fa-stack fa-lg pull-left"></span>
                       Оқушылар тізімі</a>
                </li>
                 <li>
                    <a href="@Url.Action("JURNAL", "Home")"><span class="fa-stack fa-lg pull-left"></span>
                       Журнал</a>
                </li>
            </ul>
        </div>
        <div id="page-content-wrapper" style="padding: 0px; margin: 0px;">
            <div class="container-fluid xyz">
                <div class="row">
                    <div class="col-lg-12">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="divAlertWindow" style="display: none">
        <div class="sp-question">Вы действительно хотите удалить?</div>
        <div class="s-padding10 text-center">
            <button class="btn-yes" style="width: 70px;">Да</button>
            <button class="btn-cancel" style="width: 70px;">Нет</button>
            <button class="btn-ok" style="width: 90px; margin-left: 30px; display: none;">Ok</button>
        </div>
    </div>
    <script src="~/Scripts/controller/helper.js"></script>

    <script>
        $(function () {

            $('.logoff').click(function () {
                $.post('/Account/LogOff', function () {
                    location.href = "/Home/Index";
                });

            });

        });
    </script>
       
      
          

      
</body>
