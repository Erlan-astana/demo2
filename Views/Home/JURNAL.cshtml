@{
    ViewBag.Title = "JURNAL";
}


<style>
    .k-grid-footer, .k-grid-footer td, .k-grid-header, .k-grid-header .k-header, .k-pager-numbers .k-state-selected, .k-pager-wrap, .k-scheduler-header, .km-pane-wrapper .k-grid-header .k-header {
        color: #ffffff;
        background-color: #68A4D5;
    }


    table {
        font-size: 12px;
    }

     .hide {display: none !important; }
</style>


<h2>Журнал</h2>
 <button class="btn-refresh btn btn-primary" style="margin-left: 3px;">Жаңарту</button>
   
     <select class="cmbx_Subject" style="border: 1px solid lightblue;"></select>
 <input class="cmbx_Class" style="border: 1px solid lightblue;"/>
 
 <input  type="text" placeholder="Іздеу күн боынша" class="SearchInput_Data" id="SearchInput_Data" />
<button class="btn-Search btn btn-primary">Іздеу</button>

  <button class="btn-ins btn btn-primary" style="margin-left: 3px; float: right;">Қосу</button>
 <button class="btn-update btn btn-primary" style="margin-left: 3px; float: right;">Өзгерту</button>
  <button class="btn-del btn btn-primary" style="margin-left: 3px; float: right;">Жою</button>
<div id="div-grid" style="height: calc(100%-40px); width: 70%;">
</div>
 <div class="hide"> 

       <div class="div-instruments-window">
        <table class="table">

         <select class="INP_FIO k-textbox"  id="inp_fio_hide" style="width: 300px; border: 1px solid lightblue;"></select>
          
      <tr>
            <td>Уақыт </td>
            <td>
                <input type="text" class="INP_DATE k-textbox" id="datePicker"  placeholder="толтыр" style="border: 1px solid lightblue;"/>
            </td>
        </tr>
           <tr>
                <td>Бағасы</td>
                <td>
                    <input type="text" class="INP_ASSESSMENT k-textbox" placeholder="Баға" style="border: 1px solid lightblue;" />
                  
                </td>
            </tr>
            
      
          
            <tr>
                <td></td>
                <td>
                    <button class="btn-close btn btn-primary" style="float: right; margin-left: 5px;">Жабу</button>
                    <button class="btn-save btn btn-primary" style="float: right;">Сақтау</button>

                </td>
            </tr>
        </table>
     
    </div>
</div>

<script src="~/Scripts/controller/JURNAL.js"></script>
